                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> @Localizer[nameof(Dictionary.Home)]
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="vehicles">
